<Page x:ConnectionId='1'
    x:Class="GithubDisplay.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GithubDisplay"
    xmlns:models="using:GithubDisplay.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:behaviors="using:Microsoft.Toolkit.Uwp.UI.Animations.Behaviors"
    mc:Ignorable="d">

    <Page.Resources>
        <Style x:Key="ListViewItemContainerStyle" TargetType="ListViewItem">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
        </Style>

        <DataTemplate x:Key="ReviewTemplate"                                >
            <Grid x:ConnectionId='4' Margin="12" HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="21" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid x:ConnectionId='5' Grid.RowSpan="2" Grid.Column="0"
                                                                    
                      Margin="2 2 8 2" />

                <TextBlock x:ConnectionId='6' Grid.Column="1" VerticalAlignment="Center"                                   Grid.ColumnSpan="2" TextWrapping="Wrap" />
                <TextBlock Grid.Column="1" Grid.Row="1" FontSize="13" Foreground="DarkBlue" FontWeight="Thin">
                    #<Run x:ConnectionId='9'                                     /> by <Run x:ConnectionId='10'                                           />
                </TextBlock>
                <TextBlock x:ConnectionId='7' Grid.Column="2" Margin="4 0 0 0" Grid.Row="1"
                                                                   
                           Foreground="DarkRed"
                           FontSize="13"
                           HorizontalAlignment="Right"
                                                                                                                                         />
                <TextBlock x:ConnectionId='8' Grid.Column="2" Margin="4 0 0 0" Grid.Row="1"
                                                                        
                           Foreground="DarkGreen"
                           FontSize="13"
                           HorizontalAlignment="Right"
                                                                                                                                              />
            </Grid>
        </DataTemplate>

        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontSize" Value="18" />
        </Style>
        <Storyboard x:ConnectionId='2' x:Name="ShowImage1">
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="bckImageTransitionBck">
                <DiscreteObjectKeyFrame KeyTime="0">
                    <DiscreteObjectKeyFrame.Value>
                        <Visibility>Visible</Visibility>
                    </DiscreteObjectKeyFrame.Value>
                </DiscreteObjectKeyFrame>
                <DiscreteObjectKeyFrame KeyTime="0:0:1.5">
                    <DiscreteObjectKeyFrame.Value>
                        <Visibility>Collapsed</Visibility>
                    </DiscreteObjectKeyFrame.Value>
                </DiscreteObjectKeyFrame>
            </ObjectAnimationUsingKeyFrames>
            <DoubleAnimation Duration="0:0:1.5" To="1" Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="bckImage1" d:IsOptimized="True">
                <DoubleAnimation.EasingFunction>
                    <CircleEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Duration="0:0:1.5" To="0" Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="bckImage2" d:IsOptimized="True">
                <DoubleAnimation.EasingFunction>
                    <CircleEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:ConnectionId='3' x:Name="ShowImage2">
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="bckImageTransitionBck">
                <DiscreteObjectKeyFrame KeyTime="0">
                    <DiscreteObjectKeyFrame.Value>
                        <Visibility>Visible</Visibility>
                    </DiscreteObjectKeyFrame.Value>
                </DiscreteObjectKeyFrame>
                <DiscreteObjectKeyFrame KeyTime="0:0:1.5">
                    <DiscreteObjectKeyFrame.Value>
                        <Visibility>Collapsed</Visibility>
                    </DiscreteObjectKeyFrame.Value>
                </DiscreteObjectKeyFrame>
            </ObjectAnimationUsingKeyFrames>
            <DoubleAnimation Duration="0:0:1.5" To="0" Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="bckImage1" d:IsOptimized="True">
                <DoubleAnimation.EasingFunction>
                    <CircleEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Duration="0:0:1.5" To="1" Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="bckImage2" d:IsOptimized="True">
                <DoubleAnimation.EasingFunction>
                    <CircleEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <Grid x:ConnectionId='11'  x:Name="bckImageTransitionBck"  Background="Black" Grid.RowSpan="3" Visibility="Collapsed" />
        <Image x:ConnectionId='12' x:Name="bckImage1" Stretch="UniformToFill" Grid.RowSpan="3"                                       />
        <Image x:ConnectionId='13' x:Name="bckImage2" Stretch="UniformToFill" Grid.RowSpan="3" Opacity="0"                                       />

        <Button x:ConnectionId='14' Grid.Row="0"
                HorizontalAlignment="Center"
                Content="Get PRs"
                                          
                                                                                                     
                Visibility="Collapsed"/>

        <ProgressBar x:ConnectionId='15' VerticalAlignment="Top" HorizontalAlignment="Stretch"
                     IsIndeterminate="True"
                                                                                                                    
                     Margin="25 5 25 0" />
        
        <Grid Grid.Row="1" Margin="16">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="23" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.RowSpan="3" 
                  Grid.ColumnSpan="3"
                  Background="#88EEEEEE"
                  Margin="0 -12 0 0">
                <interactivity:Interaction.Behaviors>
                    <behaviors:Blur
                        Value="4"
                        Duration="300"
                        Delay="250"
                        AutomaticallyStart="True" />
                </interactivity:Interaction.Behaviors>
            </Grid>

            <Grid x:ConnectionId='16' Background="LightCoral"
                  Grid.RowSpan="3"
                  Grid.Column="0"
                  Margin="0 -15 0 0"
                                                                                                                       />

            <TextBlock Grid.Row="0"
                       Grid.Column="0"
                       Style="{StaticResource HeaderStyle}">
                Code Review (<Run x:ConnectionId='25'                                                  /> / <Run x:ConnectionId='26'                            /> max)
            </TextBlock>

            <ListView x:ConnectionId='17' Grid.Row="2"
                      Grid.Column="0"
                      ItemTemplate="{StaticResource ReviewTemplate}"
                                                                       
                      ItemContainerStyle="{StaticResource ListViewItemContainerStyle}">
                <ListView.ItemContainerTransitions>
                    <TransitionCollection />
                </ListView.ItemContainerTransitions>
            </ListView>

            <TextBlock Grid.Row="0"
                       Grid.Column="1"
                       Style="{StaticResource HeaderStyle}">
                In Testing (<Run x:ConnectionId='24'                                               />)
            </TextBlock>

            <Border Grid.Row="2"
                    Grid.Column="1">
                <ListView x:ConnectionId='23' ItemTemplate="{StaticResource ReviewTemplate}"
                                                                        
                          ItemContainerStyle="{StaticResource ListViewItemContainerStyle}">
                    <ListView.ItemContainerTransitions>
                        <TransitionCollection />
                    </ListView.ItemContainerTransitions>
                </ListView>
            </Border>

            <TextBlock Grid.Row="0"
                       Grid.Column="2"
                       Style="{StaticResource HeaderStyle}">
                Ready to Merge (<Run x:ConnectionId='22'                                            />)
            </TextBlock>

            <ListView x:ConnectionId='18' Grid.Row="2"
                      Grid.Column="2"
                      ItemTemplate="{StaticResource ReviewTemplate}"
                                                                 
                      ItemContainerStyle="{StaticResource ListViewItemContainerStyle}">
                <ListView.ItemContainerTransitions>
                    <TransitionCollection />
                </ListView.ItemContainerTransitions>
            </ListView>

            <StackPanel Orientation="Horizontal"
                        Grid.Row="2" Grid.Column="2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom">
                <TextBlock x:ConnectionId='19' Margin="7" Foreground="Black" FontSize="12" VerticalAlignment="Center"
                                                                                                                  >
                    <Run Text="Welcome, " />
                    <Run x:ConnectionId='21'                                                />!
                </TextBlock>

                <Button x:ConnectionId='20' Background="Transparent"
                                                     
                        BorderBrush="Transparent"
                        BorderThickness="0">
                    <Button.Content>
                        <SymbolIcon Symbol="Setting" />
                    </Button.Content>
                </Button>
            </StackPanel>
            
        </Grid>
    </Grid>
</Page>

