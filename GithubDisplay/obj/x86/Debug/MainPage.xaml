<Page x:ConnectionId='1'
    x:Class="GithubDisplay.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GithubDisplay"
    xmlns:models="using:GithubDisplay.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <Style x:Key="ListViewItemContainerStyle" TargetType="ListViewItem">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
        </Style>

        <DataTemplate x:Key="ReviewTemplate"                                >
            <Grid x:ConnectionId='2' Margin="12" HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="21" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid x:ConnectionId='3' Grid.RowSpan="2" Grid.Column="0"
                                                                    
                      Margin="2 2 8 2" />

                <TextBlock x:ConnectionId='4' Grid.Column="1" VerticalAlignment="Center"                                   Grid.ColumnSpan="2" />
                <TextBlock Grid.Column="1" Grid.Row="1" FontSize="13" Foreground="DarkBlue" FontWeight="Thin">
                    #<Run x:ConnectionId='6'                                     /> by <Run x:ConnectionId='7'                                           />
                </TextBlock>
                <TextBlock x:ConnectionId='5' Grid.Column="2" Margin="4 0 0 0" Grid.Row="1"
                           Text="Failed Testing"
                           Foreground="DarkRed"
                           FontSize="13"
                           HorizontalAlignment="Right"
                                                                                                                                   />
            </Grid>
        </DataTemplate>

        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontSize" Value="18" />
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFD5DFFF" Offset="0.989"/>
                <GradientStop Color="#FFD1D1D1" Offset="0.635"/>
                <GradientStop Color="#FFEAEAEA" Offset="0.055"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button x:ConnectionId='8' Grid.Row="0"
                HorizontalAlignment="Center"
                Content="Get PRs"
                                          
                                                                                                     
                Visibility="Collapsed"/>
        
        <ProgressBar x:ConnectionId='9' VerticalAlignment="Top" HorizontalAlignment="Stretch"
                     IsIndeterminate="True"
                                                                                                                    
                     Margin="25 5 25 0" />

        <Grid Grid.Row="1" Margin="16" Background="#33EECCCC" Padding="0 10 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="23" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid x:ConnectionId='10' Background="LightCoral"
                  Grid.RowSpan="3"
                  Grid.Column="0"
                  Margin="0 -15 0 0"
                                                                                                                       />
            
            <TextBlock Grid.Row="0"
                       Grid.Column="0"
                       Style="{StaticResource HeaderStyle}">
                Code Review (<Run x:ConnectionId='16'                                                  /> / <Run x:ConnectionId='17'                            />)
            </TextBlock>

            <ListView x:ConnectionId='11' Grid.Row="2"
                      Grid.Column="0"
                      ItemTemplate="{StaticResource ReviewTemplate}"
                                                                       
                      ItemContainerStyle="{StaticResource ListViewItemContainerStyle}">
                <ListView.ItemContainerTransitions>
                    <TransitionCollection />
                </ListView.ItemContainerTransitions>
            </ListView>

            <TextBlock Grid.Row="0"
                       Grid.Column="1"
                       Style="{StaticResource HeaderStyle}">
                In Testing (<Run x:ConnectionId='15'                                               />)
            </TextBlock>
            
            <Border Grid.Row="2"
                    Grid.Column="1">
                <ListView x:ConnectionId='14' ItemTemplate="{StaticResource ReviewTemplate}"
                                                                        
                          ItemContainerStyle="{StaticResource ListViewItemContainerStyle}">
                    <ListView.ItemContainerTransitions>
                        <TransitionCollection />
                    </ListView.ItemContainerTransitions>
                </ListView>
            </Border>

            <TextBlock Grid.Row="0"
                       Grid.Column="2"
                       Style="{StaticResource HeaderStyle}">
                Ready to Merge (<Run x:ConnectionId='13'                                            />)
            </TextBlock>

            <ListView x:ConnectionId='12' Grid.Row="2"
                      Grid.Column="2"
                      ItemTemplate="{StaticResource ReviewTemplate}"
                                                                 
                      ItemContainerStyle="{StaticResource ListViewItemContainerStyle}">
                <ListView.ItemContainerTransitions>
                    <TransitionCollection />
                </ListView.ItemContainerTransitions>
            </ListView>

        </Grid>

    </Grid>
</Page>

